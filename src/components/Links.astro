---
import { Icon } from "astro-icon/components";
import type { Link } from "../types/types";

interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<div class="not-prose flex flex-wrap justify-center gap-4">
  {links.map((link) => (
    <a
      href={link.url}
      class="flex flex-row items-center gap-3 rounded-full bg-zinc-800 px-6 py-3 text-white text-lg hover:bg-zinc-700 hover:scale-105 transform transition-all duration-200 ease-in-out dark:bg-zinc-200 dark:text-zinc-900 dark:hover:bg-zinc-100"
    >
      {link.icon && <Icon name={link.icon} class="w-6 h-6" />}
      <span class="text-lg font-semibold">{link.name}</span>
    </a>
  ))}
</div>