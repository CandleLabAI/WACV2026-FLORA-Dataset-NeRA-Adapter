---
import { Font } from "astro:assets";

import Links from "../components/Links.astro";
import Authors from "../components/Authors.astro";
import Notes from "../components/Notes.astro";
import type { Author, Note, Link } from "../types/types";

import Table from "../components/Table.astro";
import GoToTop from '../components/GotoTop.astro';
import TopBar from '../components/TopBar.astro';

import "../styles/global.css";
import "katex/dist/katex-swap.css";

import { Content, frontmatter } from "../paper.mdx";

interface Frontmatter {
  title: string;
  authors: Author[];
  conference?: string;
  notes?: Note[];
  links?: Link[];
  description?: string;
  favicon: string;
  thumbnail?: string;
  theme?: "device" | "light" | "dark";
}

const {
  title,
  authors,
  conference,
  notes,
  links,
  description,
  favicon,
  thumbnail,
  theme = "device",
} = frontmatter as Frontmatter;

const baseUrl = import.meta.env.BASE_URL;
const prefix = baseUrl.endsWith("/") ? baseUrl : baseUrl + "/";
---

<!doctype html>
<html lang="en" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    {description && <meta name="description" content={description} />}
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta content="somsubhra" name="author">
    <meta content="AI4Fashion,AI,FLORA,NeRA,adapters,PEFT,LoRA,Gen AI,Kolmogorov Arnold Networks,fashion dataset,WACV,WACV 2026,Applications,Candle Lab IITR" name="keywords">

    <link rel="icon" type="image/svg+xml" href={prefix + favicon} />

    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    {thumbnail && <meta property="og:image" content={prefix + thumbnail} />}

    <Font cssVariable="--font-noto-sans" preload />

    <title>{title}</title>
  </head>
  <body
    class="overflow-x-hidden mx-auto max-w-[50rem] px-6 prose prose-lg prose-zinc dark:prose-invert prose-a:text-blue-500 prose-a:dark:text-blue-300 prose-a:no-underline prose-a:hover:underline prose-a:font-normal prose-code:bg-zinc-200 prose-code:dark:bg-zinc-800 prose-code:text-zinc-800 prose-code:dark:text-zinc-200 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:font-medium prose-code:before:content-none prose-code:after:content-none mx-auto max-w-[50rem] bg-white px-6 pt-16 pb-6 font-(family-name:--font-noto-sans) dark:bg-zinc-900"
  >
  <TopBar />
    <div>
      <h1 class="text-center text-3xl font-bold text-[#3b3f8f]">{title}</h1>
      <div class="flex flex-col items-center gap-6">
        <Authors authors={authors} />
        {conference && <div><font color="green">{conference}</font></div>}
        {notes && <Notes notes={notes} />}
        {links && <Links links={links} />}
      </div>
    </div>
    <main class="mt-6">
      <Content components={{ table: Table }} />
    </main>
    <footer class="w-full border-t bg-[#e8eff7]">
  <div class="mx-auto flex w-full max-w-5xl flex-col items-center justify-between gap-3 px-4 py-4 text-sm text-slate-700 md:flex-row">
        <p class="text-center md:text-left">
      Credits: Based on 
      <a
        href="https://github.com/RomanHauksson/academic-project-astro-template" 
        target="_blank"
        class="text-blue-700 underline hover:text-blue-900"
      >
        Roman Hauksson's Astro template
      </a>,
      licensed under
      <a 
        href="http://creativecommons.org/licenses/by-sa/4.0/" 
        target="_blank"
        class="text-blue-700 underline hover:text-blue-900"
      >
        CC BY-SA 4.0
      </a>.
    </p>
    <div class="text-center text-xs text-slate-600 md:text-right">
      Page Visits: <a href="https://www.freecounterstat.com" target="_blank" title="free website counter"><img src="https://counter1.optistats.ovh/private/freecounterstat.php?c=ad8r987d64gblgbae5gxbwmjaryjwzs1" border="0" title="free website counter" alt="free website counter"></a>
    </div>

  </div>
</footer>
    <GoToTop />
  </body>
</html>