<header id="pageHeader" class="w-full sticky top-0 z-50 flex items-center justify-between py-2 px-4 transition-colors duration-300">
  <div class="relative flex-shrink-0">
    <button 
      id="menuButton" 
      class="px-3 py-1 rounded-lg text-slate-800 hover:bg-slate-100 transition-all duration-200 flex items-center gap-1"
      aria-expanded="false"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
      Menu
    </button>

    <div id="menuDropdown" class="absolute left-0 mt-2 w-40 bg-white rounded-lg shadow-lg opacity-0 invisible transition-all duration-200">
      <a href="/WACV2026-FLORA-Dataset-NeRA-Adapter" class="flex items-center gap-2 px-4 py-2 text-slate-800 hover:bg-blue-100 rounded-t-lg"><Icon name="ri:home-fill" /> Home</a>
      <a href="mailto:sparsh.mittal@ece.iitr.ac.in" target="_blank" class="flex items-center gap-2 px-4 py-2 text-slate-800 hover:bg-blue-100 rounded-t-lg"><Icon name="ri:mail-fill" /> Contact</a>
    </div>
  </div>

<h1 class="text-center text-base font-medium text-black flex-1 mx-4 truncate">
Welcome to our Project Page!
  </h1>

  <div class="flex-shrink-0">
    <button 
      id="shareButton" 
      class="px-3 py-1 rounded-lg text-slate-800 hover:bg-slate-100 transition-all duration-200 flex items-center gap-1"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8M16 6l-4-4-4 4M12 2v14" />
      </svg>
      Share
    </button>
  </div>
</header>

<h1 class="mx-auto max-w-[50rem] px-6 text-center text-3xl font-bold text-[#3b3f8f]">{title}</h1>
<div class="flex flex-col items-center gap-6 px-4 mt-4">
  <Authors authors={authors} />
  {conference && <div class="text-green-600">{conference}</div>}
  {notes && <Notes notes={notes} />}
  {links && <Links links={links} />}
</div>


    <main class="mt-6 mx-auto max-w-[50rem] px-6">
      <Content components={{ table: Table }} />
